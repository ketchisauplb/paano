<%= form_for @question, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field', placeholder: t('.title') %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.text_area :content, :class => 'text_field', placeholder: t('.content') %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.text_field :tag_list, :class => 'text_field', placeholder: t('.tags') %>
    </div>
  </div>

  <div class="control-group" id="answer_form">
    <div class="controls">
      <%= render 'answer_form', f: f %>
    </div>
  </div>

  <%= render 'submit', f: f %>
<% end %>
