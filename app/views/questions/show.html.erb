<%- model_class = Question -%>
<div class="row-fluid">
  <%= render 'post', post: @question %>
  <%= render 'answers', answers: @question.answers %>
  <% @question.answers.new %> <!-- for a new answer instance for this question -->
  <%= form_for @question, :html => { :class => 'form-horizontal' } do |f| %>
    <div class="control-group" id="answer_form">
      <div class="controls">
        <%= render 'answer_form', f: f %> 
        <%= f.hidden_field :user_id, value: current_user.id if current_user %>
      </div>
    </div>

    <%= render 'submit', f: f %>
  <% end %>
</div>
