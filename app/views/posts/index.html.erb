<%- model_class = Question -%>

<div class="row-fluid">
  <div class="span8">
    <%= form_tag posts_path, :method => 'get', :class => 'search' do %>
      <%= text_field_tag :query, params[:query], :id => 'search-input' %>
    <% end %>
  </div>
  <div class="span4">
    <%= link_to t('.ask'), new_question_path, :class => "btn btn-success pull-right" %>
  </div>
</div>

<table class="table">
  <thead>
  </thead>
  <tbody>
    <%= render "posts", posts: @posts %>
  </tbody>
</table>
<%= render "pagination", posts: @posts%>
<%= render "shared/home/right" %>
