@import "vars.css.less.erb";

@votes_reputation_link_background_color: #e55e5e;
@answers_reputation_link_background_color: #f36e03;


.post_title a{
  font-weight: bold;
}

.post_row td{
  padding: 1px;
}

.reputation_number{
  background-color: #222;
  font-size: 10px;
  border-radius: 0px;
  padding: 7px;
  color: @white;
  font-weight: bold;
}


.votes_reputation_link, .answers_reputation_link{
  background-color: @votes_reputation_link_background_color;
  font-size: 10px;
  border-radius: 0px;
  padding: 7px;
  color: @white;
  font-weight: bold;
}

.answers_reputation_link{
  background-color: @answers_reputation_link_background_color;
}

.votes_reputation_link{
  background-color: @votes_reputation_link_background_color;
}
