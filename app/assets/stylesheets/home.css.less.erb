@import "twitter/bootstrap/bootstrap";
body { padding-top: 60px; }
@import "twitter/bootstrap/responsive";
@import "vars.css.less.erb";

//bootstrap overrides

//navbar

.navbar-inner { 
  background: @almost-black; 
  padding-top: 10px; 
  border: none; 
  min-height: 30px; 
} 
 
.navbar a{ 
  color: @grey; 
  font-weight: bold; 
  -o-transition: @transition_time; 
  -ms-transition: @transition_time; 
  -moz-transition: @transition_time; 
  -webkit-transition: @transition_time; 
  transition: @transition_time; 
} 
 
.navbar a:hover{ 
  text-decoration: none; 
  color: @white; 
}

.navbar .nav li a{ //removing the shadow on the username text on the dropdown
  text-shadow: none;
}

.navbar .nav li.dropdown.open .dropdown-toggle{
  background-color: #666;
  color: @white;
}

//sidebar

.left li a:hover {
  background-color: #f5f5f5;
}

.left li a { 
  padding: 8px 14px;
  display: block;
  border: 1px solid #e5e5e5; 
  margin: 0 0 -1px;
}

.left li:first-child a { 
  border-radius: 6px 6px 0 0;
}

//posts

.post-row td{ 
  padding: 0;
}

.post-title a{
  font-weight: bold;
}

.preview-div {
  color: #777;
  font-size: @smaller-text-size;;
}

.other-div {
  padding-top: 30px;
}

.reputation-span {
  color: @grey;
  font-size: 13px;
}

//questions

.answers{
  border-top: solid 1px @light-grey;
}

.answer{
  padding-top: 30px;
}

//tags

.tag {
  font-size: @smallest-text-size;
}

.tags-div{
  padding-left: 10px;
}

//footer

footer .span8{
  border-top: solid 1px @light-grey;
  text-align: center;
}



.small-grey-text{
  color: @grey;
  font-size: @smallest-text-size;  
}
