.navbar-inner {
  background-color: #f57a13;
  height: 50px;
  vertical-align: middle;
  padding-top: 10px;
background-image: linear-gradient(bottom, rgb(244,115,9) 11%, rgb(246,134,37) 100%);
background-image: -o-linear-gradient(bottom, rgb(244,115,9) 11%, rgb(246,134,37) 100%);
background-image: -moz-linear-gradient(bottom, rgb(244,115,9) 11%, rgb(246,134,37) 100%);
background-image: -webkit-linear-gradient(bottom, rgb(244,115,9) 11%, rgb(246,134,37) 100%);
background-image: -ms-linear-gradient(bottom, rgb(244,115,9) 11%, rgb(246,134,37) 100%);

background-image: -webkit-gradient(
  linear,
  left bottom,
  left top,
  color-stop(0.11, rgb(244,115,9)),
  color-stop(1, rgb(246,134,37))
);

}

#search_input {
  font-size: 32px;
  height: 48px;
}

.search_result_row {
  height: 144px;
}

.table .search_result_col {
  vertical-align: middle;
  border-top: none;
}

.search_result_a {
  font-weight: bold;
  font-size: 24px;
}

.search_result_preview_div {
  font-size: 12px;
}

a:hover {
  color: #5bb76f;
}

a {
  color: #288719;
}

.circle_base {
    -webkit-border-radius: 999px;
    -moz-border-radius: 999px;
    border-radius: 999px;
    behavior: url(PIE.htc);
}

.number_div {
  width: 50px;
  height: 50px;
  text-align: center;
  line-height: 50px;
  font-family: 'Open Sans', sans-serif;
  font-weight: bold;
  font-style: italic;
  color: #ffffff;
  font-size: 25px;
}

.vote_number_div {
  background: #a4dba4;
}

.answer_number_div {
  background: #ffdda8;
}

.number_col {
  width: 10%;
}

.content_col {
  width: 80%;
}

.asker_div {
  text-align: right;
  font-size: 12px;
  color: #bbbbbb;
}

.search_result_other_div {
  padding-top: 10px;
}

.container_signin { 
  background: url("<%= asset_path 'cbitambayan.jpg' %>") no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

#navbar_signin_link {
  color: #fff;
}
