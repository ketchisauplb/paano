.navbar-inner {
  background: #232323;
  vertical-align: middle;
  padding-top: 10px;
  border: none;
}

#search_input {
  font-size: 32px;
  height: 48px;
}

.search_result_row {
  height: 144px;
}

.table .search_result_col {
  vertical-align: middle;
  border-top: none;
}

.search_result_a {
  font-weight: bold;
  font-size: 24px;
}

.search_result_preview_div {
  font-size: 12px;
}

a:hover {
  color: #5bb76f;
}

a {
  color: #288719;
}

.circle_base {
    -webkit-border-radius: 999px;
    -moz-border-radius: 999px;
    border-radius: 999px;
    behavior: url(PIE.htc);
}

.number_div {
  width: 50px;
  height: 50px;
  text-align: center;
  line-height: 50px;
  font-family: 'Open Sans', sans-serif;
  font-weight: bold;
  font-style: italic;
  color: #ffffff;
  font-size: 25px;
}

.vote_number_div {
  background: #a4dba4;
}

.answer_number_div {
  background: #ffdda8;
}

.number_col {
  width: 10%;
}

.content_col {
  width: 80%;
}

.asker_div {
  text-align: right;
  font-size: 12px;
  color: #bbbbbb;
}

.search_result_other_div {
  padding-top: 10px;
}

.container_signin { 
  background: url("<%= asset_path 'cbitambayan.jpg' %>") no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

#navbar_signin_link {
  color: #fff;
}

.container {
  width: 100%;
}

.row {
  margin-left: 0px;
}

#sign_in_text{
  color: #fff;
  padding-top: 150px;
}

#sign_in_text {
  font-size: 40px;
  text-shadow:1px 1px #666;
}

#sign_in_text a{
  color: #fff;
  text-decoration: none;
}

#push, #footer{
  height: 60px;
}

#wrap{
  min-height: 100%;
  height: auto !important;
  height: 100%;
  margin: 0 auto -60px;
}

.navbar .brand{
  padding: 0px 100px 10px;
}

#user_name{
  color: #fff;
}

.navbar .nav li a{
  text-shadow: none;
}

li.dropdown.open{
  background-color: #000;
}
